<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/layoutinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/vehicleimg"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/veh_brand"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text="Vehicle Brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
                <LinearLayout
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableStart="@drawable/ic_event_available_black_24dp"
                        android:layout_gravity="center"
                        android:drawablePadding="20sp"
                        android:id="@+id/booking_fromdate"
                        android:textSize="15sp"
                        android:text="from date"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"/>

                    <TextView
                        android:drawableStart="@drawable/ic_event_busy_black_24dp"
                        android:drawablePadding="20sp"
                        android:layout_gravity="center"
                        android:id="@+id/booking_todate"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:text="to date"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"/>

                    <TextView
                        android:drawablePadding="20sp"
                        android:drawableStart="@drawable/ic_date_range_black_24dp"
                        android:layout_gravity="center"
                        android:id="@+id/veh_bookingdate"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:text="booking date"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"/>

                    <TextView
                        android:drawablePadding="20sp"
                        android:drawableStart="@drawable/ic_info_outline_black_24dp"
                        android:layout_gravity="center"
                        android:id="@+id/veh_status"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:text="status"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"/>
                    <TextView
                        android:drawablePadding="20sp"
                        android:drawableStart="@drawable/ic_monetization_on_black_24dp"
                        android:layout_gravity="center"
                        android:id="@+id/pricing"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:text="Pricing"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Message"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:id="@+id/booking_message"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:text="message"
                    android:gravity="center"
                    android:layout_marginBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>