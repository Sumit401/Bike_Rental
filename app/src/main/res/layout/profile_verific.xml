<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_verific"
    android:orientation="vertical"
    android:padding="20sp">
    <LinearLayout
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableStart="@drawable/ic_verified_user_black_24dp"
            android:drawablePadding="20sp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Driving License"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@color/white"
            android:background="#70ad4d"
            android:id="@+id/dlupload"
            android:layout_weight="2"
            android:text="Upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableStart="@drawable/ic_verified_user_black_24dp"
            android:drawablePadding="20sp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Address Proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@color/white"
            android:background="#70ad4d"
            android:id="@+id/addressproof"
            android:layout_weight="2"
            android:text="Upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="20sp"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginEnd="20sp"
            android:id="@+id/dl"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <ImageView
            android:layout_marginStart="20sp"
            android:id="@+id/aadhaar"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>

</LinearLayout>