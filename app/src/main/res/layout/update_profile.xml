<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_profile"
    android:orientation="vertical">

    <LinearLayout
        android:background="#000"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profileimage"
            android:layout_gravity="center_vertical"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_width="100sp"
            android:layout_height="100sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/upd_name"
                android:hint="Name"
                android:drawablePadding="10sp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/upd_email"
                android:editable="false"
                android:hint="Email"
                android:drawablePadding="10sp"
                android:drawableStart="@drawable/ic_mail_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <RadioGroup
            android:padding="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_male"
                android:checked="true"
                android:padding="10sp"
                android:text="Male"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/radio_female"
                android:padding="10sp"
                android:text="Female"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/upd_mobile"
                android:hint="Mobile Number"
                android:drawablePadding="10sp"
                android:drawableStart="@drawable/ic_call_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:background="#edf0f2"
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/profile_verific"
                android:background="@null"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:text="Profile Verification"
                android:gravity="start|center_vertical"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>