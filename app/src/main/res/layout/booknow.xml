<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <TextView
        android:layout_marginBottom="20sp"
        android:layout_marginStart="20sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="Book From"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
    <android.support.design.widget.TextInputLayout
        android:layout_weight="1"
        android:hint="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:editable="false"
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/fromdate"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:editable="false"
            android:clickable="true"
            android:focusable="false"
            android:hint="Time"
            android:id="@+id/fromtime"
            android:inputType="time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <TextView
        android:layout_marginBottom="20sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="Book To"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:editable="false"
                android:clickable="true"
                android:focusable="false"
                android:id="@+id/todate"
                android:hint="Date"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:editable="false"
                android:clickable="true"
                android:focusable="false"
                android:hint="Time"
                android:id="@+id/totime"
                android:inputType="time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp">
        <EditText
            android:id="@+id/messagedata"
            android:hint="Message"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_marginTop="15sp"
        android:padding="10sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/doorstep_delivery"
            android:buttonTint="@color/green"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="10sp"
            android:text="Doorstep Delivery at Rs 300"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="10sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/terms_cond"
            android:buttonTint="@color/green"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="10sp"
            android:text="I Accept the Terms and Conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/submit_form"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:layout_marginEnd="30sp"
        android:layout_marginStart="30sp"
        android:textAllCaps="false"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>